<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VPIIntercom.Views.ShowVideoPage"
             BackgroundImage="ic_bg_dark.png">
    <ContentPage.Content>
        <StackLayout>
        <StackLayout x:Name="stack_layout" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            
        </StackLayout>

            <Label x:Name="durationLbl" HorizontalOptions="CenterAndExpand" Margin="0,10,0,0"
                   VerticalOptions="Center" FontSize="Large" TextColor="White"
                   FontFamily="FaktProBlond" StyleId="FaktProBlond"/>

        <StackLayout Padding="10,20,10,20" Margin="0" BackgroundColor="#D00800" HorizontalOptions="FillAndExpand"
                         VerticalOptions="EndAndExpand" x:Name="endCallLayout">

                <Image Source="end_call.png" HorizontalOptions="Center"
                       VerticalOptions="Center" HeightRequest="40" WidthRequest="40"/>

            <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Phone_Call_End"></TapGestureRecognizer>
                    </StackLayout.GestureRecognizers>
            </StackLayout>

            </StackLayout>
    </ContentPage.Content>
</ContentPage>
